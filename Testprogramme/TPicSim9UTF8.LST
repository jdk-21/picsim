                    00008           list c=132          ;Zeilenlï¿½nge im LST auf 132 Zeichen setzen
                    00009           
                    00010           status   equ       03h
                    00011           rb       equ       06h
                    00012           var      equ       0ch
                    00013           liste1   equ       10h
                    00014           liste2   equ       11h
                    00015           liste3   equ       12h
